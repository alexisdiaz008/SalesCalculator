<p id="notice"><%= notice %></p>

<div class="row center" style="text-align:center;">
  <h1>Industry Calculator</h1>
<%= link_to 'Click to Add New Industry', new_industry_path %>
</div>
<br>
<br>
<br>
<table>
  <thead>
    <tr>
      <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Number of views</th>
      <th class="dropdown col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <button class="dropbtn">Choose an Industry:</button>
        <div class="dropdown-content">
          <ul id="industry_names">
            <% @industries.each do |industry| %>
              <li class="<%= industry.name %>"><%= industry.name %></li>
            <% end %>
          </ul>
        </div>
      </th>
      <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Industry Avg. Conversion rate</th>
      <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Mas Avg. Conversion Rate</th>
      <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Industry Options</th>
    </tr>
  </thead>

  <tbody>
    <% @industries.each do |industry| %>
      <tr id="<%= industry.name %>" class="hidden">
        <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3"><%= text_field_tag 'views', 'Enter # of views here.',id:"#{industry.name}_view_input",class:"#{industry.name}" %></th>
        <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3"><%= industry.name %></td>
        <%= text_field_tag 'views', "#{industry.conversion_rate}" ,class:"hidden",id:"#{industry.name}_industry_conversion_rate",:disabled => true %>
        <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3" ><%= text_field_tag 'views', "Industry Avg. Conversion Rate" ,id:"#{industry.name}_industry_conversion_input",:disabled => true %></td>
        <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3"><%= text_field_tag 'views', 'Mas Avg. Conversion Rate',id:"#{industry.name}_mas_conversion_input",:disabled => true %></td>
        <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3"><%= link_to 'Show', industry %><%= link_to ' Edit', edit_industry_path(industry) %><%= link_to ' Destroy', industry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



